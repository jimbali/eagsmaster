<h2><%= @question.title %></h2>
<table class="table">
  <thead>
    <tr>
      <td>Rank</td>
      <td>Team</td>
      <td>Total Points</td>
      <td>Answer</td>
      <td>Points</td>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |row| %>
      <tr>
        <td><%= row[:rank] %></td>
        <td><%= row[:team] %></td>
        <td><%= row[:totalPoints] %></td>
        <td><%= row["question#{@question.id}Answer"] %></td>
        <td><%= row["question#{@question.id}Points"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render 'autorefresh' %>
