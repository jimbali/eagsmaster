<h2><%= @question.title %></h2>
<%= form_with(url: quiz_question_url + '/submit_answer', method: 'post', local: true) do %>
  <div class="form-group">
    <%= text_field_tag(:answer, nil, placeholder: 'Answer',
                       class: 'form-control', disabled: @locked,
                       value: @question_user.answer) %>
  </div>
  <% if @locked %>
    <%= submit_tag('Undo', id: 'unlock-answer', class: 'btn btn-secondary',
                   name: 'unlock_answer') %>

    <div class="mt-4">
      <p>Waiting for the round to finish...</p>
    </div>
    <%= render 'autorefresh' %>
  <% else %>
    <%= submit_tag('Submit', class: 'btn btn-primary') %>
  <% end %>
<% end %>
